<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.janardhan_y.portfolio_app.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Nanodegree Apps!"
            android:textColor="@color/bg"
            android:textSize="21sp" />

        <Button
            android:id="@+id/movies"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heading"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/bg"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="Popular Movies"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/stock"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movies"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/bg"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="Stock Hawk"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/build"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stock"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/bg"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="Build it Bigger"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/material"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/build"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/bg"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="Make Your App Material"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/ubiquitous"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/material"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/bg"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="Go Ubiquitous"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/capstone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ubiquitous"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/bg"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="Capstone"
            android:textColor="@color/white" />

    </RelativeLayout>
</RelativeLayout>
